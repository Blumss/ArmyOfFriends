<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:startColor="#671E23"
                android:centerColor="#86272D"
                android:endColor="#671E23"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#bbb"
                    android:centerColor="#666"
                    android:startColor="#fff" />
            </shape>
        </clip>
    </item>
</layer-list>