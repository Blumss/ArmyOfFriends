<resources>

    <!-- Base application theme. -->
    <style name="OurAppTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/OurActionBar</item>
        <item name="android:alertDialogStyle">@style/OurAlertDialog</item>
        <item name="colorPrimary">#86272D</item>
        <item name="colorAccent">#515151</item>
    </style>

    <style name="OurActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#86272D</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="OurAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#86272D</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorPrimary">#86272D</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="OurDrawerTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#86272D</item>
        <item name="colorAccent">#515151</item>
    </style>

    <style name="OurDrawerThemeText" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>
    </style>
    <style name="ImpressumTheme" parent="OurDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">#86272D</item>
    </style>

    <style name="BGTheme" parent="OurDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">#fff</item>
    </style>

    <style name="ActivityExtendedHeadline">
        <item name="android:background">#86272D</item>
    </style>

    <style name="RegularTextTheme" parent="OurDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000</item>
    </style>

    <style name="Headline1TextColor" parent="BGTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#666</item>
    </style>

    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">
            @drawable/com_parse_ui_parse_login_button_background_selector
        </item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
    </style>

</resources>
