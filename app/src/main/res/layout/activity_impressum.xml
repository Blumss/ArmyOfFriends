<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pemws14.armyoffriends.ImpressumActivity"
    android:background="#86272D">

    <ImageView android:id="@+id/icon"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"/>

    <TextView android:id="@+id/appname"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView  android:id="@+id/1"
        android:layout_below="@+id/appname"
        android:layout_marginTop="75sp"
        android:layout_centerHorizontal="true"
        android:text="Brought to you by:"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView  android:id="@+id/2"
        android:layout_below="@+id/1"
        android:layout_centerHorizontal="true"
        android:text="Benjamin Fritzsche"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView  android:id="@+id/3"
        android:layout_below="@+id/2"
        android:layout_centerHorizontal="true"
        android:text="Maritn FrÃ¶hlich"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView  android:id="@+id/4"
        android:layout_below="@+id/3"
        android:layout_centerHorizontal="true"
        android:text="Lara Hirschbeck"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView  android:id="@+id/5"
        android:layout_below="@+id/4"
        android:layout_centerHorizontal="true"
        android:text="Daniel Kolb"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView  android:id="@+id/6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Version 0.8.14"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
