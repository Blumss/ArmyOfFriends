<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="3dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fight_list_picture"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_menu_army"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="UserPic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/fight_list_picture"
            android:layout_alignTop="@+id/fight_list_picture"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/fight_list_name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <TextView
                android:id="@+id/fight_list_level"
                android:textColor="#888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fight_list_name"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/fight_list_strength"
                android:textColor="#888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fight_list_level"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/fight_list_bestFighter"
                android:textColor="#888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fight_list_strength"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:ellipsize="marquee"/>

            <Button
                android:id="@+id/fight_list_button"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="FIGHT!"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:background="#86272D"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>