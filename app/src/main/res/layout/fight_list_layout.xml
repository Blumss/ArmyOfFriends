<?xml version="1.0" encoding="utf-8"?>
<!-- Definig a container for you List Item-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/fight_list_picture"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/userpic_placeholder"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/fight_list_name"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fight_list_picture"
        android:layout_toRightOf="@id/fight_list_picture"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        />

    <TextView
        android:id="@+id/fight_list_strength"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fight_list_name"
        android:layout_toRightOf="@id/fight_list_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="3dp"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <TextView
        android:id="@+id/fight_list_bestFighter"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fight_list_strength"
        android:layout_toRightOf="@id/fight_list_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="3dp"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <Button
        android:id="@+id/fight_list_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="FIGHT!"
        android:textColor="#ffffff"
        android:background="#86272D"
        android:layout_centerVertical="true" />

</RelativeLayout>