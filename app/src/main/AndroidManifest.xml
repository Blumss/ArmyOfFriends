<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pemws14.armyoffriends" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/OurAppTheme" >
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.pemws14.armyoffriends.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".drawer.BaseActivity"
            android:label="@string/title_activity_base"
            android:parentActivityName="com.pemws14.armyoffriends.MainActivity"
            android:theme="@style/OurDrawerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pemws14.armyoffriends.MainActivity" />
        </activity>
        <activity
            android:name="com.pemws14.armyoffriends.FightActivity"
            android:label="@string/title_activity_fight"
            android:parentActivityName="com.pemws14.armyoffriends.MainActivity"
            android:theme="@style/OurDrawerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pemws14.armyoffriends.MainActivity" />
        </activity>

        <service
            android:name="BackgroundService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:process=":background_process"
            android:label="Army of Friends - Backgroundservice"
         />
        <receiver android:name=".BackgroundReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>



</manifest>
